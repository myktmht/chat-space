.content-left
  .user-name
    %p
    = current_user.name
    %i.fa.fa-edit
    = link_to edit_user_path(current_user) do
      %i.fa.fa-cog

  = render 'groups'

.content-right
  .group
    %p.group__name グループ名
    %p.group__member MEMBER: メンバー名
    %p.group__btn Edit

  = render 'chat'

  .bottom-content
    .submit
      %p.submit__content type a message
      %i.fa.fa-file-image-o
    %p.submit__btn Send  